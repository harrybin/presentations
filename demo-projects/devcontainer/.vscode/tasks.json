{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/devcontainer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/devcontainer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/devcontainer.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "ðŸš€start-backend",
            "type": "shell",
            "command": "dotnet run --urls=http://localhost:5139/",
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "statusbar": {
                    "color": "#00ff2a"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "ðŸš€start-frontend",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "${workspaceFolder}/frontend/container-ships-ui",
                "statusbar": {
                    "color": "#00ff2a"
                }
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}